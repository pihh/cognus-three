<CognusScene>
  <Three::Camera::Perspective
    @fov={{50}}
    @position={{this.cameraPosition}}
    @far={{1000}}
  />

  <Three::Light::Ambient @intensity={{0.5}} />
  <Three::Light::Spot
    @intensity={{0.5}}
    @angle={{0.1}}
    @penumbra={{1}}
    @position={{this.spotLightPosition}}
    @castShadow={{true}}
  />

  <Three::Light::Spot
    @intensity={{0.5}}
    @angle={{0.1}}
    @penumbra={{1}}
    @position={{this.spotLight2Position}}
    @castShadow={{true}}
  />

  <Objects::Shoe />
  <Objects::Ground />
  <Objects::Environment />
</CognusScene>
<Three::Controls::Orbit
  @minPolarAngle={{this.minPolarAngle}}
  @maxPolarAngle={{this.maxPolarAngle}}
  @enableZoom={{false}}
  @enablePan='[{}]'
/>